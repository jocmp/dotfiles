# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
  PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
  PATH="$HOME/.local/bin:$PATH"
fi

# enable colored output from ls, etc
export CLICOLOR=1
export LSCOLORS="Exfxcxdxbxegedabagacad"

# load
export PATH="$HOME/bin:$HOME/.local/bin:$HOME/.nodenv/bin:node_modules/.bin:/usr/local/bin:/usr/local/sbin:$HOME/.cargo/bin:$PATH"
export PATH="$HOME/go/bin:$PATH"
export PATH="${HOMEBREW_PREFIX}/opt/coreutils/libexec/gnubin:$PATH"
export PATH="${ASDF_DATA_DIR:-$HOME/.asdf}/shims:$PATH"
export EDITOR="vim"
export CDPATH=".:$HOME/dev/"
export PATH="$HOME/.pyenv/bin:$PATH"

# coreutils
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"

# prompt
export PS1="[\w]\$(vcprompt -f '[%b%u%m]')$ "

if [ "$(uname)" == "Darwin" ]; then
  export ANDROID_HOME=$HOME/Library/Android/sdk
  export JAVA_HOME=/Applications/Android\ Studio.app/Contents/jbr/Contents/Home
else
  export GPG_TTY=$(tty)
  export PATH="/usr/lib/gnupg:$PATH"
  export ANDROID_HOME=$HOME/Android/Sdk
fi

export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools

export GITHUB_USER=jocmp
export PATH="/opt/homebrew/opt/icu4c/bin:$PATH"
export PATH="/opt/homebrew/opt/icu4c/sbin:$PATH"
